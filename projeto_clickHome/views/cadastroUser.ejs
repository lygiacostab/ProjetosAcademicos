    <%- include('partials/_header') %>
    <div style="height: 80px;"></div>
  
 
  <section class="container my-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6 cadastro-box">
        <h2 class="text-center mb-4">Cadastro de Usuário</h2>
        <form action="/cadastroUser" method="POST">
          <div class="mb-3 d-flex align-items-center">
            <label for="CPF" class="me-5 label-cadastro">CPF:</label>
            <input type="text" class="form-control" id="CPF" placeholder="Informe o seu CPF" name="cpf" required>
          </div>
          <div class="mb-3 d-flex align-items-center">
            <label for="nomeUser" class="me-5 label-cadastro">NOME:</label>
            <input type="textarea" class="form-control" id="nomeUser" placeholder="Informe o seu nome completo" name="nome" required>
          </div>
          <div class="mb-3 d-flex align-items-center">
            <label class="me-5 label-cadastro">SEXO:</label>
          <div class="form-check form-check-inline me-3">
            <input class="form-check-input" type="radio" name="sexo" id="sexoFeminino" value="Feminino" required>
            <label class="form-check-label" for="sexoFeminino">Feminino</label>
          </div>

          <div class="form-check form-check-inline me-3">
            <input class="form-check-input" type="radio" name="sexo" id="sexoMasculino" value="Masculino">
            <label class="form-check-label" for="sexoMasculino">Masculino</label>
          </div>

          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="sexo" id="sexoNaoInformar" value="Prefiro não dizer">
            <label class="form-check-label" for="sexoNaoInformar">Prefiro não dizer</label>
          </div>
      </div>

          <div class="mb-3 d-flex align-items-center">
            <label for="emailUser" class="me-5 label-cadastro">E-MAIL:</label>
            <input type="text" class="form-control" id="emailUser" placeholder="Informe o seu e-mail" name="email" required>
          </div>
          <div class="mb-3 d-flex align-items-center">
            <label for="senha" class="me-5 label-cadastro">SENHA:</label>
            <input type="password" class="form-control" id="senha" placeholder="Digite sua senha" name="senha" required>
          </div>
          <div class="mb-3 d-flex align-items-center">
            <label for="senhaConfirm" class="me-6 label-cadastro">CONFIRMAR SENHA:</label>
            <input type="password" class="form-control" id="senhaConfirm" placeholder="Digite novamente a sua senha" name="senhaConfirm" required>
          </div>
          <div class="d-grid gap-2">
            <button type="submit" class="btn btn-personalizado">CONFIRMAR</button>
            <button type="reset" class="btn btn-dark">CANCELAR</button>
          </div>
          <div class="mt-3 text-center">
            <a href="/login">JÁ TENHO UM CADASTRO</a><br>
          </div>
        </form>
      </div>
    </div>
  </section>

  
  <%- include('partials/_footer') %>

<!-- Script do Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>